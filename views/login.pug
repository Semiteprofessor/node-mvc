extend layout.pug

block content 
    .container 
        .row.justify-content-center
        .col-md-8
            .card
                .card-header Login 
                .card-body
                    form.form-horizontal(action="/login", method="post")
                    .mb-3 
                    .form-group
                        label.col-form-label(for="email") Email
                        input.form-control.form-control-lg(type="email", name="email")
                    .mb-3 
                    .form-group
                        label.col-form-label(for="password") Password
                        input.form-control.form-control-lg(type="password", name="password")
                    .mb-3.py-3
                    button.btn.btn-primary(type="submit") Login
                    a(href="/register").ps-2 Register
